    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "rootDir": "./src",
    "outDir": "./dist",
  },
  "exclude": [
    "node_modules",
    ".npm"
  ]
}